{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Simple page to estudy flexbox and scss",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss build/styles.css -w",
    "liveserver": "live-server --port=9090",
    "start:dev": "npm-run-all --parallel liveserver watch:sass",
    "compile:sass": "node-sass sass/main.scss build/styles.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' build/styles.comp.css -o build/styles.prefix.css",
    "compress:css": "node-sass build/styles.prefix.css build/styles.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "postinstall": "npm run build:css",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegolopes98/trillo.git"
  },
  "keywords": [
    "scss",
    "trillo",
    "npm",
    "css",
    "html",
    "frontend"
  ],
  "author": "Diego",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/diegolopes98/trillo/issues"
  },
  "homepage": "https://github.com/diegolopes98/trillo#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "path": "^0.12.7"
  },
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  }
}
